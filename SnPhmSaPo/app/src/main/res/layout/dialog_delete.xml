<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtDeleteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Xóa sản phẩm"
        android:textColor="@color/black"
        android:textSize="24dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtDeleteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="24dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDeleteCancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:gravity="center"
            android:text="Thoát"
            android:textColor="@color/purpleApp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDeleteConfirm"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:gravity="center"
            android:text="Đồng ý"
            android:textColor="@color/purpleApp"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>