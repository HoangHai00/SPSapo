<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtQuantityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Số lượng mua"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/ivQuantityReset"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_delete" />
    </LinearLayout>

    <!-- Bàn phím số -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:columnCount="3"
        android:rowCount="12">

        <!-- Các nút số -->
        <Button
            android:id="@+id/btnQuantity1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity8"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity9"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity."
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnQuantity0"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:text="0"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ivQuantityDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_delete" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQuantityCancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:gravity="center"
            android:text="Hủy"
            android:textColor="@color/purpleApp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDeleteConfirm"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_cri_white_grey_stroke"
            android:gravity="center"
            android:text="Xác nhận"
            android:textColor="@color/purpleApp"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>