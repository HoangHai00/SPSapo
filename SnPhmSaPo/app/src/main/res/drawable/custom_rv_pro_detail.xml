<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Phần viền trên -->
    <item android:top="0dp" android:left="-1dp" android:right="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="#f5f6fa" />
        </shape>
    </item>

    <!-- Nền trắng -->
    <item android:top="1dp" android:bottom="1dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>
