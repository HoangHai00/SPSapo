<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hình dạng gốc -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#D7D9DD" />

        </shape>
    </item>
    <!-- Hình dạng đổ bóng -->
    <item android:right="1dp" android:bottom="1dp" android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#f5f6fa" />

            <padding
                android:bottom="4dp"
                android:right="4dp" />
        </shape>
    </item>
</layer-list>
